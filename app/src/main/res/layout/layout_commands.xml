<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_chat_commands"
        android:textColor="@color/md_blue_600"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/chkCommandsEnable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="@string/check_enabled" />

    <LinearLayout
        android:id="@+id/layerClickOpenCommand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:background="?attr/selectableItemBackground"
        android:focusable="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/profile_list" />

        <TextView
            android:id="@+id/tvChatCommandsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_weight="0"


            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="@string/label_no_commands_in_chat"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/md_teal_500" />

    </LinearLayout>


</LinearLayout>
