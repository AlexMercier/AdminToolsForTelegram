<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="ToolbarTheme">
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="alertDialogTheme">@style/AlertDialogCustom</item>
    </style>


    <style name="MyButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_selector_blue_border</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
    </style>

    <style name="ClickableTextView" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/md_teal_500</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/md_red_500</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
